<h1>Listing messages</h1>

<% if current_user.messages.present? %>
  <div class="table-responsive">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>From</th>
          <th>Subject</th>
          <th>Body</th>
        </tr>
      </thead>

      <tbody>
        <% current_user.messages.each do |message| %>
          <tr>
            <td><%= message.email %></td>
            <td><%= message.subject %></td>
            <td><%= message.body %></td>
          </tr>
        <% end -%>
      </tbody>
    </table>
  </div>
<% else %>
    <h2>You don't have messages yet</h2>
<% end -%>

<%= link_to 'New Message', new_user_message_path(current_user), class: 'btn btn-primary', role: 'button' %>
